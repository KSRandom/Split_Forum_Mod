		<require-file name="ManageSplitForum.spanish_latin.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="ManageSplitForum.spanish_latin-utf8.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="empty.png" destination="$imagesdir" />
		<redirect timeout="5000" url="?action=admin;area=subforums;sa=postinstall" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<code>settings_uninstall.php</code>
		<modification reverse="true">install_20x.xml</modification>
		<modification reverse="true">install_third_party.xml</modification>
		<modification reverse="true">language_english.xml</modification>
		<remove-file name="$sourcedir/ManageSplitForum.php" />
		<remove-file name="$sourcedir/Subs-SplitForum.php" />
