	<id>Dougiefresh:Split_Forum</id>
	<name>Split Forum Mod</name>
	<type>modification</type>
	<version>1.38</version>
	
	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<code>settings_install.php</code>
		<database>db_install.php</database>
		<modification>install_20x.xml</modification>
		<modification>install_third_party.xml</modification>
		<modification>language_english.xml</modification>
		<modification>language_spanish_latin.xml</modification>
		<require-file name="ManageSplitForum.php" destination="$sourcedir" />
		<require-file name="Subs-SplitForum.php" destination="$sourcedir" />
		<require-file name="Subs-SplitForumHooks.php" destination="$sourcedir" />
		<require-file name="Subs-SplitForumAdminHooks.php" destination="$sourcedir" />
		<require-file name="splitforum_20.css" destination="$themedir/css" />
